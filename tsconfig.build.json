{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "es7",
      "esnext.asynciterable"
    ],
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.js",
    "src/**/__mocks__/**/*.ts",
    "src/**/__mocks__/**/*.js",
    "dist",
    "coverage",
    "node_modules",
    "acceptance-tests",
    "jest.integration.config.js",
    "jest.config.js"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
